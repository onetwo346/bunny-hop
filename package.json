{
  "name": "bunny-hop-game",
  "version": "1.0.0",
  "description": "A fun bunny hopping game built with Phaser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["game", "bunny", "phaser", "electron"],
  "author": "Bunny Hop Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.bunnyhop.game",
    "productName": "Bunny Hop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "powerups.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 